<!-- ToggleButton のボタン部分 -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 未選択時 -->
    <item android:state_checked="false"><layer-list>
            <item android:bottom="2dp" android:left="2dp" android:right="38dp" android:top="2dp"><shape android:shape="oval">
                    <size android:height="24dp" android:width="24dp" />

                    <solid android:color="#ffffff" /> <!-- White -->
                </shape></item>
        </layer-list></item>

    <!-- 選択時 -->
    <item android:state_checked="true"><layer-list>
            <item android:bottom="2dp" android:left="22dp" android:right="18dp" android:top="2dp"><shape android:shape="oval">
                    <size android:height="24dp" android:width="24dp" />

                    <solid android:color="#ffffff" /> <!-- White -->
                </shape></item>
        </layer-list></item>

</selector>