<resources>

    <attr name="circle_radius" format="float" />

    <!-- For CurvedClock -->
    <declare-styleable name="CurvedClock">
        <attr name="center_x" format="integer" />
        <attr name="center_y" format="integer" />
        <attr name="circle_radius" />
        <attr name="text_offset" format="integer" />
        <attr name="text_startangle" format="float" />
        <attr name="text_color" format="color" />
        <attr name="text_size" format="integer" />
        <attr name="date_format" format="string" />
        <attr name="draw_circle" format="boolean" />
    </declare-styleable>


    <!-- For CurvedBarMeterView -->
    <declare-styleable name="CurvedBarMeterView">
        <attr name="circle_center_x" format="integer" />
        <attr name="circle_center_y" format="integer" />
        <attr name="circle_radius" />
        <attr name="label_text" format="string" />
        <attr name="label_text_offset" format="float" />
        <attr name="label_text_startangle" format="float" />
        <attr name="label_text_color" format="color" />
        <attr name="label_text_size" format="integer" />
        <attr name="bar_start_angle" format="float" />
        <attr name="bar_sweep_angle" format="float" />
        <attr name="bar_width" format="float" />
        <attr name="bar_color" format="color" />
        <attr name="bar_back_color" format="color" />
    </declare-styleable>

    <!-- For CurvedIndexView -->
    <declare-styleable name="CurvedIndexView">
        <attr name="drawClockwise" format="boolean" />
        <attr name="circleCenterX" format="integer" />
        <attr name="circleCenterY" format="integer" />
        <attr name="circleRadius" format="float" />
        <attr name="startAngle" format="float" />
        <attr name="sweepAngle" format="float" />
        <attr name="dotRadius" format="float" />
        <attr name="activeDotColor" format="color" />
        <attr name="noActiveDotColor" format="color" />
        <attr name="maxIndex" format="integer" />
        <attr name="activeIndex" format="integer" />
    </declare-styleable>


</resources>